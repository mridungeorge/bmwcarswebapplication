{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "target": "es6",
    "lib": ["es6", "dom"],
    "typeRoots": ["./node_modules/@types"],
    "esModuleInterop": true,
      "resolveJsonModule": true, // Add this line to enable importing JSON files
      "skipLibCheck": true // Add this line to skip type checking of declaration files in node_modules
    },
    "include": ["src/**/*.ts", "src/**/*.json"], // Include JSON files in the compilation process
    "exclude": ["node_modules"]
  }
  